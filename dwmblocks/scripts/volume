#!/bin/bash
VOL=$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}')
VOLUMELEVEL=${VOL%?}
if [ $VOLUMELEVEL = 0 ];
then
   VOLUMEICON="ï€¦"
elif [ $VOLUMELEVEL -gt 0 ] && [ $VOLUMELEVEL -lt 80 ];
then
   VOLUMEICON="ï€§"
elif [ $VOLUMELEVEL -ge 80 ];
then
   VOLUMEICON="ï€¨"
fi
echo $VOLUMEICON $VOLUMELEVEL ð›°‡
